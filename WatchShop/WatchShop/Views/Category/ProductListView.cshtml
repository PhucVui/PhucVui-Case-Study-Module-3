@model List<Product>
@inject WatchShopDbContext context;
@{

    var Categories = context.Categories.ToList();
    Layout = "_LayoutAdmin";
    
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>View</title>
</head>
<body>
    <table id="example" class="table table-striped table-bordered" style="width:100%">
        <thead class="thead-dark" style="text-align:center">
            <tr>
                <th>Product Name</th>
                <th>Price</th>
                <th>Category</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody style="text-align:center">
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Price</td>
                    <td>@Categories.Find(c => c.Id == item.CategoryId).Name</td>
                    <td>
                        <a asp-controller="Product" asp-action="Edit" asp-route-Id="@item.Id" title="Edit">Edit</a> ||
                        <a asp-controller="Product" asp-action="Delete" asp-route-Id="@item.Id"
                           onclick="return confirm('Are you sure?');">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <script>
        $(document).ready(function () {
            $('#example').DataTable();
        });
    </script>
</body>
</html>



