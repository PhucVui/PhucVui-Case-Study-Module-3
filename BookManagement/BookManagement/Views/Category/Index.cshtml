
@model List<Category>
@inject BookDbContext context;

@{
    var BookList = context.Books.ToList();
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>View</title>
</head>
<body>
    <table id="example" class="table table-striped table-bordered" style="width:100%">
        <thead class="thead-dark" style="text-align:center">
            <tr>
                <th>Mã Sách</th>
                <th>Tên Sách</th>
                <th>Số lượng Sách</th>
            </tr>
        </thead>
        <tbody style="text-align:center">
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.CategoryName</td>
                    <td>
                        <a asp-controller="Category" asp-action="BookView" asp-route-id="@item.Id">
                            @*@BookList.FindAll(s => s.CategoryId == item.Id).Count*@
                            Chi tiết
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <script>
        $(document).ready(function () {
            $('#example').DataTable();
        });
    </script>
</body>
</html>




